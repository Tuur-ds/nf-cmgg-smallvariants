/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for local genomes paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines reference genomes using genome paths.
    Can be used by any config that customises the base path using:
        $params.genomes_base / --genomes_base
----------------------------------------------------------------------------------------
*/

params {
    genomes {
        "GRCh38" {
            dict                = "${params.genomes_base}/Hsapiens/hg38/seq/hg38.dict"
            fai                 = "${params.genomes_base}/Hsapiens/hg38/seq/hg38.fa.fai"
            fasta               = "${params.genomes_base}/Hsapiens/hg38/seq/hg38.fa"
            strtablefile        = "${params.genomes_base}/Hsapiens/hg38/variation/hg38_strtable.zip"
            dbsnp               = "${params.genomes_base}/Hsapiens/hg38/variation/dbsnp-151.vcf.gz"
            dbsnp_tbi           = "${params.genomes_base}/Hsapiens/hg38/variation/dbsnp-151.vcf.gz.tbi"
            vep_cache           = "${params.genomes_base}/Hsapiens/hg38/vep"
            dbnsfp              = "${params.genomes_base}/Hsapiens/hg38/variation/dbNSFP-4.3/dbNSFP4.3a_grch38.gz"
            dbnsfp_tbi          = "${params.genomes_base}/Hsapiens/hg38/variation/dbNSFP-4.3/dbNSFP4.3a_grch38.gz.tbi"
            spliceai_indel      = "${params.genomes_base}/Hsapiens/hg38/variation/spliceAI/spliceai_scores.masked.indel.hg38.vcf.gz"
            spliceai_indel_tbi  = "${params.genomes_base}/Hsapiens/hg38/variation/spliceAI/spliceai_scores.masked.indel.hg38.vcf.gz"
            spliceai_snv        = "${params.genomes_base}/Hsapiens/hg38/variation/spliceAI/spliceai_scores.masked.snv.hg38.vcf.gz"
            spliceai_snv_tbi    = "${params.genomes_base}/Hsapiens/hg38/variation/spliceAI/spliceai_scores.masked.snv.hg38.vcf.gz"
            mastermind          = "${params.genomes_base}/Hsapiens/hg38/variation/Mastermind/mastermind_cited_variants_reference-2022.01.06-grch38.vcf.gz"
            mastermind_tbi      = "${params.genomes_base}/Hsapiens/hg38/variation/Mastermind/mastermind_cited_variants_reference-2022.01.06-grch38.vcf.gz.tbi"
            eog                 = "${params.genomes_base}/Hsapiens/hg38/variation/EOG_202008_sites-only.vcf.gz"
            eog_tbi             = "${params.genomes_base}/Hsapiens/hg38/variation/EOG_202008_sites-only.vcf.gz.tbi"
        }
    }
}
